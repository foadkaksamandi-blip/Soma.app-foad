<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- نقش و موجودی -->
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نقش: -"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موجودی: 0"
            android:textSize="18sp"
            android:paddingBottom="12dp" />

        <!-- دکمه مخصوص فروشنده -->
        <Button
            android:id="@+id/btnStartServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="شروع سرور بلوتوث (فروشنده)"
            android:padding="12dp" />

        <!-- بخش خریدار: اسکن و انتخاب -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اسکن دستگاه فروشنده (خریدار)"
            android:layout_marginTop="12dp" />

        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:dividerHeight="1dp" />

        <TextView
            android:id="@+id/tvSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دستگاه انتخاب‌شده: -"
            android:layout_marginTop="8dp" />

        <!-- مبلغ و پرداخت -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="مبلغ (ریال)"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="پرداخت"
            android:layout_marginTop="8dp" />

        <!-- نتیجه و QR رسید -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نتیجه تراکنش نمایش داده می‌شود"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imgQr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:contentDescription="QR رسید تراکنش"
            android:scaleType="centerInside" />

    </LinearLayout>
</ScrollView>
