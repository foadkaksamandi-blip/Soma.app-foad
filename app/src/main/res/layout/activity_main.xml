<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRole"
            android:text="نقش:" android:textSize="18sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBalance"
            android:text="موجودی: -" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="6dp" />

        <!-- فروشنده -->
        <Button
            android:id="@+id/btnStartServer"
            android:text="شروع دریافت (فروشنده)"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- خریدار -->
        <Button
            android:id="@+id/btnScan"
            android:text="جست‌وجوی دستگاه‌ها (خریدار)"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="match_parent" android:layout_height="150dp"
            android:dividerHeight="1dp" android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvSelected"
            android:text="دستگاه انتخاب‌شده: -"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />

        <EditText
            android:id="@+id/etAmount"
            android:hint="مبلغ را وارد کنید (ریال)"
            android:inputType="number"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnPay"
            android:text="پرداخت (خریدار)"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvResult"
            android:text="نتیجه: -"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imgQr"
            android:layout_width="220dp" android:layout_height="220dp"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
