<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.soma.app.foad">

    <!-- Bluetooth (برای دستگاه‌های قدیمی‌تر تا اندروید 11) -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>

    <!-- Bluetooth (اندروید 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />

    <!-- برخی دستگاه‌ها برای اسکن بلوتوث نیاز به لوکیشن دارند -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- سرویس جلویی برای نگه‌داشتن اتصال و جلوگیری از Sleep -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".SomaApp"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.Soma"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- سرویس بلوتوث (بعداً فایلش را می‌سازیم) -->
        <service
            android:name=".bt.BluetoothService"
            android:exported="false"
            android:foregroundServiceType="dataSync|connectedDevice" />

        <!-- صفحه اصلی برنامه (بعداً فایلش را می‌سازیم) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
